{
  "name": "workshop",
  "version": "0.0.1",
  "description": "Recreated gadgets for sharpening programming skills",
  "main": "src/index.js",
  "scripts": {
    "lint": "biome check src",
    "lint:check": "biome check src",
    "lint:fix": "biome check src --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fedeoo/workshop.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fedeoo/typescript-algorithms/issues"
  },
  "homepage": "https://github.com/fedeoo/typescript-algorithms#readme",
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.16.4",
    "@biomejs/biome": "1.8.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.2"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "js", "json"],
    "rootDir": "src",
    "testRegex": ".(test|spec).(j|t)s$",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "jsdom"
  }
